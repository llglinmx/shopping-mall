{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app"
			}
		}, {
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/shoppingCart/shoppingCart",
			"style": {
				"navigationBarTitleText": "购物车",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/sort/sort",
			"style": {
				"navigationBarTitleText": "分类",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录",
				"enablePullDownRefresh": false
			}

		}
	],
	"subPackages": [{
		"root": "pagesIndex",
		"pages": [{
			"path": "goodsList/goodsList",
			"style": {
				"navigationBarTitleText": "商品列表",
				"enablePullDownRefresh": false
			}

		}]
	}, {
		"root": "pagesSort",
		"pages": [{
			"path": "goodsDetails/goodsDetails",
			"style": {
				"navigationBarTitleText": "商品详情",
				"enablePullDownRefresh": false
			}

		}]
	}, {
		"root": "pagesShopping",
		"pages": [{
                    "path" : "confirmOrder/confirmOrder",
                    "style" :                                                                                    
                {
                    "navigationBarTitleText": "确认订单",
                    "enablePullDownRefresh": false
                }
                
                }
            ]
	}, {
		"root": "pagesMine",
		"pages": [{
			"path": "receivingAddress/receivingAddress",
			"style": {
				"navigationBarTitleText": "收货地址",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "addAddress/addAddress",
			"style": {
				"navigationBarTitleText": "添加地址",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "allOrder/allOrder",
			"style": {
				"navigationBarTitleText": "全部订单",
				"enablePullDownRefresh": false
			}

		}]
	}],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8",
		"navigationStyle": "custom"
	},
	"tabBar": {
		"borderStyle": "black",
		"color": "#666", // 未选中时菜单颜色
		"selectedColor": "#324B78", // 选中时菜单颜色
		"backgroundColor": "#fff", //背景颜色
		"list": [{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/images/nav/home.png", // 图标
				"selectedIconPath": "static/images/nav/home-active.png" // 选中之后的图标
			},
			{
				"pagePath": "pages/sort/sort",
				"text": "分类",
				"iconPath": "static/images/nav/sort.png", // 图标
				"selectedIconPath": "static/images/nav/sort-active.png" // 选中之后的图标
			},
			{
				"pagePath": "pages/shoppingCart/shoppingCart",
				"text": "购物车",
				"iconPath": "static/images/nav/shopping.png", // 图标
				"selectedIconPath": "static/images/nav/shopping-active.png" // 选中之后的图标
			},
			{
				"pagePath": "pages/mine/mine",
				"text": "我的",
				"iconPath": "static/images/nav/mine.png", // 图标
				"selectedIconPath": "static/images/nav/mine-active.png" // 选中之后的图标
			}
		]
